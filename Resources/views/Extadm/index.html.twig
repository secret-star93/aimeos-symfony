<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Aimeos admin interface</title>
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />

{% for cssFile in cssFiles %}
        <link rel="stylesheet" href="/bundles/aimeosshop/{{cssFile}}" />
{% endfor %}

        <script type="text/javascript">
        window.MShop = {

            i18n: {
                lang: '{{lang}}',
                content: {{i18nContent|raw}},
                available: {{languages|raw}}
            },

            config: {
                site: {{site|raw}},
                data: {{config|raw}},
                smd: {{smd|raw}},
                itemschema: {{itemSchemas|raw}},
                searchschema: {{searchSchemas|raw}},
                urlTemplate: '{{urlTemplate|raw}}',
                activeTab: {{activeTab}},

                baseurl: {
                    content: '{{uploaddir}}'
                },

                update: {
                    type: 'Symfony',
                    version: '{{version}}'
                }
            }
        }
        </script>

        <script type="text/javascript" src="{{ path('aimeos_shop_extadm_file', {'site': 'default'}) }}"></script>

    </head>
    <body>
        <noscript><p>You need to enable javascript!</p></noscript>
    </body>
</html>
